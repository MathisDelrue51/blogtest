<%# on utilise include pour faire appelle a notre header et reprendre toutes les infos contenues dedans %>
<%- include('partials/header') %>
<%# pour chaque article contenu dans notre article.json on affiche sont contenu (titre, autheur...) %>
        <% for (const art of articles) { %>
        <article class="post pure-u-1 pure-u-md-1 pure-u-lg-1-2 pure-u-xl-1-3">
          <div class="post-content post--category-histoire" style="background-image: url('<%= art.img %>')">
            <header class="post-header">
              <h2 class="post-title"><a href="/article/<%= art.id %>"><%= art.title %></a></h2>
              <span class="post-image-caption"><%= art.sub_title %></span>

              <p class="post-meta">
                Par <a class="post-author" href="#"><%= art.author %></a> dans la catégorie <a class="post-category"
                  href="#"><%= art.category %></a>
              </p>
            </header>
            <main class="post-summary">
              <p>
                <%# les mots sont entrecoupés par des espaces (utilisation de split). Et l'on souahite 30 afficher mots (slice). On remet un espace entre chacun de ces 30 mots (join)  %>
                <%let resume =  art.text.split(' ').slice(0,30).join(' ');%>
                <%= resume %> <a href="#">[lire plus…]</a>
              </p>
            </main>
          </div>
        </article>
        <% } %>     

        <%# on utilise include pour faire appelle a notre footer et reprendre toutes les infos contenues dedans %>
      <%- include('partials/footer') %>